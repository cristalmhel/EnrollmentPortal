@model EnrollmentPortal.Models.Entities.StudentFile

@{
    ViewData["Title"] = "Delete Student";
}

<div class="d-flex justify-content-center">
    <div class="card w-md-100 w-50 card-box-shadow">
        <div class="card-header">
            <h3>Are you sure you want to delete this?</h3>
            <h4>Student ID: @Model.StudId</h4>
        </div>
        <div class="card-body">
            <div>
                <dl class="row">
                    <dt class="col-sm-3">
                        Last Name
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.STFSTUDLNAME)
                    </dd>
                    <dt class="col-sm-3">
                        First Name
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.STFSTUDFNAME)
                    </dd>
                    <dt class="col-sm-3">
                        Middle Name
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.STFSTUDMNAME)
                    </dd>
                    <dt class="col-sm-3">
                        Year
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.STFSTUDYEAR)
                    </dd>
                    <dt class="col-sm-3">
                        Remarks
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.STFSTUDREMARKS)
                    </dd>
                    <dt class="col-sm-3">
                        Status
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.STFSTUDSTATUS)
                    </dd>
                    <dt class="col-sm-3">
                        Course
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Course.Code)
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="StudId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-outline-dark mx-3" asp-action="Index"> &#10502; Back</a>
                </form>
            </div>
        </div>
    </div>
</div>

