@model EnrollmentPortal.Models.Entities.StudentFile

@{
    ViewData["Title"] = "Edit Student";
}

<div class="d-flex justify-content-center">
    <div class="card w-md-100 w-50 card-box-shadow">
        <div class="card-header">
            <h2>Edit Student ID: @Model.StudId</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="StudId" />
                        <div class="form-group mb-3">
                            <label asp-for="STFSTUDLNAME" class="control-label"> Last Name</label>
                            <input asp-for="STFSTUDLNAME" class="form-control" />
                            <span asp-validation-for="STFSTUDLNAME" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="STFSTUDFNAME" class="control-label"> First Name</label>
                            <input asp-for="STFSTUDFNAME" class="form-control" />
                            <span asp-validation-for="STFSTUDFNAME" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="STFSTUDMNAME" class="control-label"> Middle Name</label>
                            <input asp-for="STFSTUDMNAME" class="form-control" />
                            <span asp-validation-for="STFSTUDMNAME" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="STFSTUDYEAR" class="control-label">Year</label>
                            <input asp-for="STFSTUDYEAR" class="form-control" />
                            <span asp-validation-for="STFSTUDYEAR" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="STFSTUDREMARKS" class="control-label">Remarks</label>
                            <input asp-for="STFSTUDREMARKS" class="form-control" />
                            <span asp-validation-for="STFSTUDREMARKS" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="STFSTUDSTATUS" class="control-label">Status</label>
                            <select asp-for="STFSTUDSTATUS" class="form-control" asp-items="ViewBag.StatusOptions"></select>
                            <span asp-validation-for="STFSTUDSTATUS" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CourseId" class="control-label">Course</label>
                            <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                            <span asp-validation-for="CourseId" class="text-danger"></span>
                        </div>
                        <div class="form-group d-flex justify-content-end">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a class="btn btn-outline-dark" asp-action="Index"> &#10502; Back</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
