@model EnrollmentPortal.Models.Entities.SubjectSchedFile

@{
    ViewData["Title"] = "Schedule Details";
}

<div>
    <div class="card card-box-shadow">
        <div class="card-header">
            <h2>EDP Code: @Model?.SSFEDPCODE</h2>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="form-group col-sm">
                    <label class="control-label">Subject </label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.SubjectFile.SFSUBJCODE)" disabled />
                </div>
                <div class="form-group col-sm">
                    <label class="control-label">Description</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.SubjectFile.SFSUBJDESC)" disabled />
                </div>
                <div class=" form-group col-sm">
                    <label class="control-label">Units</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.SubjectFile.SFSUBJUNITS)" disabled />
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group col-sm">
                    <label class="control-label">EDP Code</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.SSFEDPCODE)" disabled />
                </div>
                <div class="form-group col-sm">
                    <label class="control-label">Start Time</label>
                    <input class="form-control" value="@Model?.SSFSTARTTIME.ToString("hh:mm tt")" disabled />
                </div>
                <div class=" form-group col-sm">
                    <label class="control-label">End Time</label>
                    <input class="form-control" value="@Model?.SSFENDTIME.ToString("hh:mm tt")" disabled />
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group col-sm">
                    <label class="control-label">AM/PM</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.SSFXM)" disabled />
                </div>
                <div class="form-group col-sm">
                    <label class="control-label">Days</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.SSFDAYS)" disabled />
                </div>
                <div class=" form-group col-sm">
                    <label class="control-label">Room</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.SSFROOM)" disabled />
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group col-sm">
                    <label class="control-label">Section</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.SSFSECTION)" disabled />
                </div>
                <div class="form-group col-sm">
                    <label class="control-label">Semester</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.SSFSSEM)" disabled />
                </div>
                <div class=" form-group col-sm">
                    <label class="control-label">Year</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.SSFSCHOOLYEAR)" disabled />
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group col-sm">
                    <label class="control-label">Status</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.SSFSTATUS)" disabled />
                </div>
                <div class="form-group col-sm">
                    <label class="control-label">Max Size</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.SSFMAXSIZE)" disabled />
                </div>
                <div class=" form-group col-sm">
                    <label class="control-label">Class Size</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.SSFCLASSSIZE)" disabled />
                </div>
            </div>

            <div>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                <a class="btn btn-outline-dark mx-3" asp-action="Index"> &#10502; Back</a>
            </div>
        </div>
    </div>
</div>
