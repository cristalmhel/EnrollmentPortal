@{
    ViewData["Title"] = "Home Page";
}

<div class="container mb-lg-4">
    <div class="text-center">
        <h2 class="display-5">Elevate Your Learning Journey</h2>
        <p>Explore Our Extensive Course Catalog and Enroll Today</p>
    </div>

    <div class="w-100 d-flex justify-content-center">
        <div id="carouselExampleControls" class="carousel slide carousel-w" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://i.ibb.co/P5xSLXg/ccs.png" class="d-block w-100 carousel-h" alt="ccs">
                </div>
                <div class="carousel-item">
                    <img src="https://i.ibb.co/d4bLQKC/coe.png" class="d-block w-100 carousel-h" alt="coe">
                </div>
                <div class="carousel-item">
                    <img src="https://i.ibb.co/V9Q0SkC/law.jpg" class="d-block w-100 carousel-h" alt="law">
                </div>
                <div class="carousel-item">
                    <img src="https://i.ibb.co/gtfnffZ/crim.jpg" class="d-block w-100 carousel-h" alt="crim">
                </div>
                <div class="carousel-item">
                    <img src="https://i.ibb.co/Gdf443S/nursing.jpg" class="d-block w-100 carousel-h" alt="nursing">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="col-12 my-4 d-flex justify-content-center">
        <div class="row sem-home-select">
            <div class="col-4">
                <span>School Year:</span>
                <select class="form-select" aria-label="Select School Year">
                    <option selected value="2024">2024</option>
                    <option value="2023">2023</option>
                    <option value="2022">2022</option>
                </select>
            </div>
            <div class="col-4">
                <span>Semester:</span>
                <select class="form-select" aria-label="Select Semester">
                    <option value="FirstSem">1st Semester</option>
                    <option value="SecondSem">2nd Semester</option>
                    <option value="Summer">Summer</option>
                </select>
            </div>
            <div class="col-4 pt-4">
                <button class="btn btn-primary"> Search </button>
            </div>
        </div>
        
    </div>
    <section class="bg-light py-3 py-md-5 py-xl-8">
